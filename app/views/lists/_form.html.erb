<%= form_with(model: [list], class: 'list__form') do |f| %>
  <%= f.text_field :name, 
    placeholder: 'Name', 
    class: "input",
    autofocus: true
  %>
  
  <div class="actions">
    <%= f.submit 'Salvar', class: 'button is-primary' %>
    <%= link_to 'Cancelar', lists_path, class: 'button is-danger' %>
  <div>
<% end %>
