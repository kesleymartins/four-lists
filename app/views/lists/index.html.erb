<section class="page-header box">
  <div>
    <h2 class="h2">Minhas Listas</h2>
  </div>

  <div>
    <%= link_to 'Nova Lista', 
      new_list_path, 
      data: { turbo_frame: dom_id(List.new) }, 
      class: 'button' 
    %>
  </div>
</section>

<section>
  <%= turbo_frame_tag dom_id(List.new) %>

  <ul class="list_index">
    <%= turbo_frame_tag :lists do %>
      <% @lists.each do |list| %>
        <%= render 'list', list: list %>
      <% end %>
    <% end %>
  </ul>
</section>
